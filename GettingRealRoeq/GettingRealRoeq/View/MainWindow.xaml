<Window
    x:Class="GettingRealRoeq.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GettingRealRoeq"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Gruppe 14 - Booking System"
    Width="800"
    Height="450"
    d:DesignHeight="1000"
    d:DesignWidth="1200"
    xml:lang="Eng"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/Images/image (1).webp" />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="1"
            Grid.Column="4"
            Width="140"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Command="{Binding OpenNewWindowCmd}"
            Content="New Booking"
            Cursor="Hand"
            FontSize="20"
            Style="{DynamicResource ButtonStyle}"
             />
        <Button
            Grid.Row="3"
            Grid.Column="4"
            Width="170"
            Height="35"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Command="{Binding OpenManageBookingCmd}"
            Content="Manage Booking"
            Cursor="Hand"
            FontSize="20"
            Style="{DynamicResource ButtonStyle}" />
        <Calendar Grid.Row="1"
                  Grid.RowSpan="2"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Margin="0,0,0,0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Background="{x:Null}"
                  BorderBrush="Transparent"
                  Foreground="White"
                  BorderThickness="0"
                  CalendarButtonStyle="{DynamicResource CalendarCalendarButtonStyle1}"
                  CalendarDayButtonStyle="{DynamicResource CalendarCalendarDayButtonStyle1}"
                  CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle1}"
                  Style="{DynamicResource CalendarStyle}">

            <Calendar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2.5"
                                    ScaleY="2.5" />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Calendar.RenderTransform>
        </Calendar>
    </Grid>
</Window>

