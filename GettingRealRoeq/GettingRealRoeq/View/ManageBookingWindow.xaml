<Window
    x:Class="GettingRealRoeq.View.ManageBookingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GettingRealRoeq.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Manage Bookings"
    d:DesignHeight="700"
    xml:lang="Eng"
    d:DesignWidth="1200"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/Images/image (1).webp" Stretch="UniformToFill" />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="2"
            Grid.Column="1"
            Width="150"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Delete Booking"
            FontSize="20"
            Style="{DynamicResource ButtonStyle}"
            Command="{Binding DeleteBtnCmd}"/>
        <Button
            Grid.Row="2"
            Grid.Column="3"
            Width="150"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding BackBtnCmd}"
            Content="Back"
            FontSize="20"
            Style="{DynamicResource ButtonStyle}" />


        <ListBox
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Width="1200"
            Height="400"
            Margin="30,0,0,0"
            ItemsSource="{Binding BookingDetails}" 
            SelectedItem="{Binding SelectedItem}"
            Background="Transparent"
            Foreground="White"
            FontSize="17"
            BorderBrush="AntiqueWhite"/>


    </Grid>
</Window>
